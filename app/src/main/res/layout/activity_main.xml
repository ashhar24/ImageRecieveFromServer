<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.defoliate.imagerecievefromserver.MainActivity">

    <TextView
        android:id="@+id/tvprofilejson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"/>

    <Button
        android:id="@+id/bfriendlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvprofilejson"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:text="Friend List"/>

    <Button
        android:id="@+id/bpendingfriendlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/rv"
        android:layout_alignRight="@+id/rv"
        android:layout_alignTop="@+id/bfriendlist"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp"
        android:text="Pending List"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rv"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/bpendingfriendlist"
        />

</RelativeLayout>
